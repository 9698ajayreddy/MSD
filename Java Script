document.addEventListener('DOMContentLoaded', () => {
  // Navigation menu functionality (for all sections including requested ones)
  const navLinks = document.querySelectorAll('nav a');
  const sections = document.querySelectorAll('main section');

  navLinks.forEach(link => {
    link.addEventListener('click', e => {
      e.preventDefault();

      // Remove active class from all links and sections
      navLinks.forEach(l => l.classList.remove('active'));
      sections.forEach(section => section.classList.remove('active'));

      // Add active class to clicked link and corresponding section
      link.classList.add('active');
      const sectionId = link.getAttribute('data-section');
      const activeSection = document.getElementById(sectionId);
      if (activeSection) activeSection.classList.add('active');
    });
  });

  // Testimonials functionality
  const testimonials = document.querySelectorAll('#testimonials .testimonial');
  let currentTestimonialIndex = 0;

  function showTestimonial(index) {
    testimonials.forEach((t, i) => {
      t.style.display = i === index ? 'block' : 'none';
    });
  }

  window.prevTestimonial = function() {
    currentTestimonialIndex = (currentTestimonialIndex - 1 + testimonials.length) % testimonials.length;
    showTestimonial(currentTestimonialIndex);
  };

  window.nextTestimonial = function() {
    currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonials.length;
    showTestimonial(currentTestimonialIndex);
  };

  showTestimonial(currentTestimonialIndex);

  // Gallery modal functionality
  const galleryModal = document.createElement('div');
  galleryModal.id = 'galleryModal';
  galleryModal.style.position = 'fixed';
  galleryModal.style.top = '0';
  galleryModal.style.left = '0';
  galleryModal.style.width = '100%';
  galleryModal.style.height = '100%';
  galleryModal.style.backgroundColor = 'rgba(0,0,0,0.85)';
  galleryModal.style.display = 'none';
  galleryModal.style.alignItems = 'center';
  galleryModal.style.justifyContent = 'center';
  galleryModal.style.zIndex = '1000';
  galleryModal.style.cursor = 'pointer';

  const modalImg = document.createElement('img');
  modalImg.style.maxWidth = '90%';
  modalImg.style.maxHeight = '90%';
  modalImg.style.borderRadius = '8px';
  modalImg.style.boxShadow = '0 0 30px #000';

  galleryModal.appendChild(modalImg);
  document.body.appendChild(galleryModal);

  window.openGalleryModal = function(src, alt) {
    modalImg.src = src;
    modalImg.alt = alt;
    galleryModal.style.display = 'flex';
  };

  galleryModal.addEventListener('click', () => {
    galleryModal.style.display = 'none';
  });

  // Optional: For menu cards, add a hover or click effect if needed
  // Example: highlight on hover is handled by CSS already
});
